<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<BorderPane xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.MainWindowController">
   <center>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <ImageView fitHeight="400.0" fitWidth="623.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../resources/dissentmagazine.org.jpg" />
               </image>
            </ImageView>
         </children>
      </HBox>
   </center>
   <right>
      <VBox prefHeight="285.0" prefWidth="87.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <Button fx:id="closeButton" mnemonicParsing="false" onAction="#handleCloseButton" prefHeight="25.0" prefWidth="90.0" text="Close">
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets bottom="5.0" />
               </VBox.margin>
            </Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="5.0" />
         </BorderPane.margin>
      </VBox>
   </right>
</BorderPane>
